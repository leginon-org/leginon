# This configuration file is based on JEM-2100F at NYSBC
[tem option]
USE_PLA = False
# true if the scope has an energy filter
ENERGY_FILTER = False

[eos]
# electron optics class
USE_MODES = lowmag, mag1

[lens]
# lens class
# convert Objective Lens clicks to Focus in meters
OM_SCALE = 1e-8
#confirmed at NYSBC JEM2100F
OL_SCALE = 2.0e-9

[camera]
# convert to pA/???^2
CURRENT_DENSITY_SCALE = 1e-16

[def]
# deflector class
# convert beam tilt clicks to angle in radians
BEAMTILT_FACTOR_X = 6.7e-6
BEAMTILT_FACTOR_Y = 6.7e-6

# convert shift clicks to distance in meters
BEAMSHIFT_FACTOR_X_MAG1 = 1.1e-9
BEAMSHIFT_FACTOR_Y_MAG1 = 1.1e-9
BEAMSHIFT_FACTOR_X_LOWMAG = 5e-8
BEAMSHIFT_FACTOR_Y_LOWMAG = 5e-8

IMAGESHIFT_FACTOR_X_MAG1 = 9.5e-10
IMAGESHIFT_FACTOR_Y_MAG1 = 9.5e-10
