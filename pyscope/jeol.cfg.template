IMAGESHIFT_FACTOR_Y_MAG1_4000 = 0.63
IMAGESHIFT_FACTOR_X_LOWMAG = 3e-8
IMAGESHIFT_FACTOR_Y_LOWMAG = 3e-8

[stage]
# stage class
# convert from click to distance in meters
STAGE_SCALE_XYZ = 1e9 
