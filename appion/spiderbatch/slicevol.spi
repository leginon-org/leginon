; slicevol
FR
?IN.Volume (dir/vol)?[vol]
FR
?OUT.Image template (dir/img***)?[tmpl]

; ~~~~~ start ~~~~~

FS
[vol]
FI x21,x22,x23
[vol]
(12,2,1) ;sam,row,slc

CP
[vol]
_2

DO LB1 x11=1,x23
 VM
 echo -n Slice {%F7.1%x11}..
 BL
 _1
 x21,x22
 N
 (0)
 DO LB2 x12=1,x21 ;foreach sam
  DO LB3 x13=1,x22 ; foreach row
   GP x30
   _2
   x12,x13,x11
   RP
   _1
   x12,x13
   x30
  LB3
 LB2
 CP
 _1
 [tmpl]x11
 DE
 _1
 VM
 echo .Written.
LB1

RE
