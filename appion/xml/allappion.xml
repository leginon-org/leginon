<?xml version="1.0" encoding="us-ascii"?>
<allappion>
 <outdir>
	<name>Output directory</name>
	<default></default>
	<description>Output directory for storing output files</description>
	<type>path</type>
 </outdir>
 <dbimages>
	<name>database images</name>
	<default></default>
	<description>SessionId and preset from Leginon</description>
	<type>string</type>
	<regex>[a-z0-9]+,[a-z0-9]+</regex>
 </dbimages>
 <runid>
	<name>run id</name>
	<default>run1</default>
	<description>Name of run id</description>
	<type>string</type>
 </runid>
 <alldbimages>
	<name>database images</name>
	<default></default>
	<description>SessionId and preset from Leginon</description>
	<type>string</type>
	<regex>[a-z0-9]+</regex>
 </alldbimages>
 <apix>
	<name>apix</name>
	<default>1.0</default>
	<description>Angstroms per pixel</description>
	<type>float</type>
 </apix>
 <diam>
	<name>diam</name>
	<default>0</default>
	<description>Particle diameter in pixels</description>
	<type>integer</type>
 </diam>
 <bin>
	<name>binning</name>
	<default>1</default>
	<description>Bin size for images (power of 2)</description>
	<type>integer</type>
	<example>1,2,4,8,16</example>
 </bin>
 <continue>
	<name>continue</name>
	<default>False</default>
	<description>Continue from previous location</description>
	<type>boolean</type>
 </continue>
 <commit>
	<name>commit</name>
	<default>False</default>
	<description>Commit results to database</description>
	<type>boolean</type>
 </commit>
 <description>
	<name>commit</name>
	<default>False</default>
	<description>Description of processing run</description>
	<type>string</type>
 </description>
 <rundir>
	<name>Run directory</name>
	<default></default>
	<description>Run directory for storing all files</description>
	<type>path</type>
 </rundir>
 <donedictname>
	<name>done dictionary name</name>
	<default></default>
	<description>Name of file for keeping tracking of previously processed files</description>
	<type>path</type>
 </donedictname>
 <functionlog>
	<name>function log name</name>
	<default></default>
	<description>Name of file for logging command line parameters</description>
	<type>path</type>
 </functionlog>
 <pixdiam>
	<name>pixel diameter</name>
	<default>1.0</default>
	<description>Diameter of particle in pixels (unbinned)</description>
	<type>calc</type>
 </pixdiam>
 <binpixdiam>
	<name>pixel diameter</name>
	<default>1.0</default>
	<description>Binned diameter of particle in pixels</description>
	<type>calc</type>
 </binpixdiam>
</allappion>
