<?xml version="1.0" encoding="us-ascii"?>
<allappion>
 <outdir>
	<name>output directory</name>
	<default></default>
	<description>Output directory for storing output files</description>
	<type>path</type>
	<example>/ami/data##/project/appion/session/function</example>
	<database>True</database>
 </outdir>
 <dbimages>
	<name>database images</name>
	<default></default>
	<description>SessionId and preset from Leginon</description>
	<type>list,string</type>
	<example>07mar21a,en</example>
	<regex>[a-z0-9]+</regex>
 </dbimages>
 <runid>
	<name>run id</name>
	<default>run1</default>
	<description>Name of run id</description>
	<type>string</type>
	<required>True</required>
 </runid>
 <alldbimages>
	<name>database images</name>
	<default></default>
	<description>SessionId from Leginon</description>
	<example>06nov09d</example>
	<type>string</type>
	<regex>[a-z0-9]+</regex>
 </alldbimages>
 <diam>
	<name>diam</name>
	<default></default>
	<description>Particle diameter in angstroms</description>
	<type>float</type>
	<range>1,1500</range>
 </diam>
 <bin>
	<name>binning</name>
	<default>4</default>
	<description>Bin size for images (must be power of 2)</description>
	<type>integer</type>
	<list>1,2,4,8,16,32,64</list>
 </bin>
 <continue>
	<name>continue</name>
	<default>True</default>
	<description>Continue from previous location</description>
	<type>boolean</type>
 </continue>
 <commit>
	<name>commit</name>
	<default>False</default>
	<description>Commit results to database</description>
	<type>boolean</type>
 </commit>
 <background>
	<name>background run</name>
	<default>False</default>
	<description>Run appion in background mode, no extra features that slow things down</description>
	<type>boolean</type>
 </background>
 <description>
	<name>description</name>
	<default></default>
	<description>Description of processing run</description>
	<type>string</type>
 </description>
 <limit>
	<name>image processing limit</name>
	<default></default>
	<description>Limit the number of images to process</description>
	<type>integer</type>
 </limit>
  <nowait>
	<name>do not wait for more images</name>
	<default>False</default>
	<description>Do not wait for more images after finishing all images</description>
	<type>boolean</type>
 </nowait>
  <shuffle>
	<name>shuffle images</name>
	<default>False</default>
	<description>Shuffle the order of the images, do not process them in order</description>
	<type>boolean</type>
 </shuffle>
 <nocontinue>
	<name>do not continue</name>
	<default>True</default>
	<description>Overrides 'continue', removes donedict and starts from beginning</description>
	<type>boolean</type>
 </nocontinue>
</allappion>
